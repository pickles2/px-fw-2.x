{
    "name": "pickles2/px-fw-2.x",
    "description": "Pickles Framework(PxFW) は、静的で大きなウェブサイトを効率よく構築できる オープンソースのHTML生成ツールです。",
    "keywords": ["pickles2","pickles"],
    "license": "MIT",
    "authors": [
        {
            "name": "Tomoya Koyanagi",
            "email": "tomk79@gmail.com"
        }
    ],
    "scripts":{
        "test": [
            "php ./vendor/phpunit/phpunit/phpunit"
        ] ,
        "documentation": [
            "php ./vendor/phpdocumentor/phpdocumentor/bin/phpdoc --title \"Pickles Framework 2.0.48 API Document\" -d \"./php/\",\"./px-files/themes/\" -t \"./sample_pages/phpdoc/\""
        ]
    } ,
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": [
    ],
    "require": {
        "php": ">=5.4.0" ,
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "tomk79/filesystem": "~1.0",
        "tomk79/request": "~1.0",
        "michelf/php-markdown": "~1.6",
        "leafo/scssphp": "~0.7"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.1" ,
        "phpdocumentor/phpdocumentor": "^2.9.0"
    },
    "autoload": {
        "files": [
            "php/pickles.php",
            "php/px.php",
            "php/bowl.php",
            "php/pxcmd.php",
            "php/site.php",
            "php/commands/api.php",
            "php/commands/clearcache.php",
            "php/commands/config.php",
            "php/commands/phpinfo.php",
            "php/commands/publish.php",
            "php/processors/md.php",
            "php/processors/scss.php",
            "php/processors/autoindex.php",
            "php/processors/encodingconverter.php",
            "php/processors/ssi.php",
            "px-files/themes/pickles2/php/theme.php"
        ]
    }
}
