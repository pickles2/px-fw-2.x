<IfModule mod_rewrite.c>
	<IfModule mod_negotiation.c>
		Options -MultiViews
	</IfModule>
	RewriteEngine on
	RewriteCond %{REQUEST_URI} !^.*?/\.px_execute.php/
	RewriteCond %{REQUEST_URI} /(.*?\.(?:html|htm|css|js))?$
	RewriteRule ^(.*)$ \.px_execute.php/$1 [L]
</IfModule>


